#include<bits/stdc++.h>
using namespace std;

#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

#define ll long long

//====================================

void solve(){
    ll n; cin>>n;
    vector<ll> v(n);
    for(auto &i: v) cin>>i;
    sort(v.begin(), v.end());
    cout<<(v[n-1]-v[0])*2 <<'\n';
}


int main(){
    optimize();

    ll t=1;
    cin>>t;
    while(t--)
        solve();
}
